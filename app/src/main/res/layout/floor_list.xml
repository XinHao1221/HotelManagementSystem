<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textFloor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="1F"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textRoom"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_toEndOf="@+id/textFloor"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="101,102,103,104"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/see_floor_details"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/navigate_next"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>