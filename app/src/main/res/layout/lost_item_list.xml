<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/lost_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/reservation_list_item_gray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lost_item_img"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/image_of_lost_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/lost_loc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/lost_location"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/lost_item_img"
                app:layout_constraintTop_toTopOf="@id/lost_item_img" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/colon"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/lost_loc_txt"
                app:layout_constraintTop_toTopOf="@id/lost_loc_txt" />

            <TextView
                android:id="@+id/lost_loc"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textView"
                app:layout_constraintTop_toTopOf="@id/lost_loc_txt" />

            <TextView
                android:id="@+id/lost_desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/description"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/lost_loc_txt"
                app:layout_constraintTop_toBottomOf="@+id/lost_loc" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toTopOf="@id/lost_desc_txt" />

            <TextView
                android:id="@+id/lost_desc"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/lost_desc_txt" />

            <TextView
                android:id="@+id/lost_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/status"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/lost_loc_txt"
                app:layout_constraintTop_toBottomOf="@+id/lost_desc" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/lost_status_txt" />

            <TextView
                android:id="@+id/lost_status"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/lost_status_txt" />

            <TextView
                android:id="@+id/found_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_marginTop="5dp"
                android:text="@string/found_time"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/lost_loc_txt"
                app:layout_constraintTop_toBottomOf="@+id/lost_status" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/found_time_txt" />

            <TextView
                android:id="@+id/found_time"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/found_time_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</android.widget.FrameLayout>