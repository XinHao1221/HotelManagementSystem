<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/theme_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/night_shelter_white_24dp" />

        <TextView
            android:id="@+id/textRoomName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_toEndOf="@+id/imageView"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Room 101"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textRoomType"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/textRoomName"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_toEndOf="@+id/imageView"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Type: single room"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButtonPaid"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/paid_black_24dp"
            android:background="@android:color/transparent">
        </ImageButton>

        <TextView
            android:id="@+id/priceOfWorkday"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/textRoomType"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_toEndOf="@+id/imageButtonPaid"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Workday: RM50.00"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/priceOfWeekend"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/priceOfWorkday"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_toEndOf="@+id/imageButtonPaid"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Weekend: RM50.00"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/priceOfHoliday"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/priceOfWeekend"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_toEndOf="@+id/imageButtonPaid"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Holiday: RM50.00"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/see_floor_details"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/navigate_next" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>